@model IEnumerable<User>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Никнейм</th>
                <th>Почта</th>
                <th>Телефон</th>
                <th>Сайт</th>
                <th>Управление</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {

                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Website</td>
                    <td>
                        <a asp-action="Posts" asp-route-id="@item.Id" title="Публикации пользователя" class="btn btn-outline-dark">
                            <i class="bi bi-sticky-fill"></i>
                        </a>
                        <a asp-action="Photos" asp-route-id="@item.Id" title="Фото пользователя" class="btn btn-outline-dark">
                            <i class="bi bi-image-fill"></i>
                        </a>
                        <a asp-action="Todos" asp-route-id="@item.Id" title="Список дел пользователя" class="btn btn-outline-dark">
                            <i class="bi bi-list-task"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
